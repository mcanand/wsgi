<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_setting_dsr_abrus" model="ir.ui.view">
        <field name="name">res.config.settings.dsr</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="crm.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <!--            <xpath expr="//div[@id='crm_lead']" position="inside">-->
            <xpath expr="//div[@data-key='crm']/h2" position="before">
                <h2>CRM Suite</h2>
                <div class="row mt16 o_settings_container" id="crm_suite_id">
                    <div class="col-lg-6 o_setting_box" id="crm_suite">
                        <div class="o_setting_left_pane">
                            <field name="is_dsr_abrus"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_dsr_abrus"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="crm_kyc_details_id">
                        <div class="o_setting_left_pane">
                            <field name="is_kyc_details"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_kyc_details"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="crm_ninja_dashboard">
                        <div class="o_setting_left_pane">
                            <field name="module_ks_dashboard_ninja"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ks_dashboard_ninja"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="module_crm_pipeline_default_tree">
                        <div class="o_setting_left_pane">
                            <field name="module_crm_pipeline_default_tree"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_crm_pipeline_default_tree"/>
                        </div>
                    </div>
                     <div class="col-12 col-lg-6 o_setting_box" id="is_need_expected_revenue">
                        <div class="o_setting_left_pane">
                            <field name="is_need_expected_revenue"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_need_expected_revenue"/>
                        </div>
                    </div>
                </div>

            </xpath>

        </field>
    </record>
</odoo>